---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Welcome to Astro.">
	<div class="my-custom-class">HOLA inicio</div>
	<span class="font-myfont italic">Hola mundo con mi fuente elegida</span>
	<Icon name="mdi:elephant" size="100" class="text-blue-600" />
	<div id="btn" data-role="Admin">Pinchar</div>
	<div class="embla">
		<div class="embla__container">
			<div class="embla__slide">Slide 1</div>
			<div class="embla__slide">Slide 2</div>
			<div class="embla__slide">Slide 3</div>
		</div>
	</div>
</Layout>
<style>
	.my-custom-class {
		@apply bg-red-600 text-white text-2xl;
	}
	.embla {
		overflow: hidden;
	}
	.embla__container {
		display: flex;
	}
	.embla__slide {
		flex: 0 0 100%;
		min-width: 0;
	}
</style>

<script>
	import JSConfetti from "js-confetti";
	import EmblaCarousel from "embla-carousel";
	const btn = document.getElementById("btn");
	const jsConfetti = new JSConfetti();
	btn.addEventListener("click", (e) => {
		console.log("ayy!", e.target.classList);
		jsConfetti.addConfetti();
	});

	const emblaNode = document.querySelector(".embla");
	const options = { loop: false };
	const emblaApi = EmblaCarousel(emblaNode, options);
	console.log(emblaApi.slideNodes())
</script>
